extends ../../layouts/sign

block content
  h5 Create account

  form.register-app(method='POST')
    .form-group.input-group-lg
      input.form-control(type='text' name='firstName' placeholder='Firstname' required='' autofocus='')
    .form-group.input-group-lg
      input.form-control(type='text' name='lastName' placeholder='Lastname' required='')
    .form-group.input-group-lg
      input.form-control(type='email' name='email' placeholder='Email' required='')
    .form-group.input-group-lg
      input.form-control(type='password' name='password' placeholder='Password' required='')
    .form-group.input-group-lg
      input.form-control(type='text' name='phone' placeholder='Phone number' required='')
    .form-group.input-group-lg
      input#files.form-control(type='file' required='')
    .form-group.input-group-lg
      #recaptcha-container
    button.btn.btn-primary.btn-lg.btn-block(type='submit') Register
    hr
    p.text-muted Already have an account?
    a.btn.btn-outline-light.btn-sm(href='/login') Sign in!
  div#login-phone-step2
    h5 Verify code
    form#phone-number-verify(method='POST')
      .form-group.input-group-lg
        input.form-control(type='text' name='code' placeholder='Code' required='' autofocus='')
      button.btn.btn-primary.btn-lg.btn-block(type='submit') Verify
